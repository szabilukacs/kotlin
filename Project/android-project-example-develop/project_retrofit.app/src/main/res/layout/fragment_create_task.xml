<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edittext_department_id"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginTop="372dp"
        android:ems="10"
        android:hint="Department id"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_priority"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginTop="512dp"
        android:ems="10"
        android:hint="priority"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_assign_to"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginTop="512dp"
        android:ems="10"
        android:hint="Assign to id"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_due_date_long"
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginTop="372dp"
        android:ems="10"
        android:hint="Deadline"
        android:inputType="numberDecimal"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.Material3.DynamicColors.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Create task"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_title"
        android:layout_width="252dp"
        android:layout_height="58dp"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_create_task"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="580dp"
        android:backgroundTint="#3F51B5"
        android:text="Add task"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        style="@style/Theme.Material3.DynamicColors.Dark"
        android:id="@+id/progress_circular"
        android:layout_width="97dp"
        android:layout_height="94dp"
        android:layout_marginTop="260dp"
        android:textColor="@color/colorRed"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.Material3.DynamicColors.Dark"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginTop="92dp"
        android:text="Title"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Theme.Material3.DynamicColors.Dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Description"
        android:textSize="30sp"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_description"
        android:layout_width="312dp"
        android:layout_height="111dp"
        android:layout_marginTop="240dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="115dp"
        android:layout_height="192dp"
        android:layout_marginTop="372dp"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New" />

        <RadioButton
            android:id="@+id/radioButton_in_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In progress" />

        <RadioButton
            android:id="@+id/radioButton_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done" />

        <RadioButton
            android:id="@+id/radioButton_blocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Blocked" />

    </RadioGroup>

    <SeekBar
        android:id="@+id/seekBar_progress"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:layout_marginTop="456dp"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="428dp"
        android:text="Progress"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>